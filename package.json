{
  "name": "webapps-hub-dynamic",
  "version": "1.0.0",
  "description": "Dynamic web applications showcase with admin dashboard - deployed on Netlify with serverless functions",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "seed-db": "node scripts/seed-database.js",
    "generate-images": "node scripts/generate-images.js",
    "setup": "npm run init-db && npm run seed-db && npm run generate-images",
    "build": "node scripts/netlify-build.js",
    "build-static": "node build-static.js",
    "serve-static": "npx serve public",
    "verify-security": "node scripts/verify-security.js",
    "deploy-prep": "npm run verify-security && npm run build && echo 'Ready for Netlify deployment!'",
    "netlify-build": "npm run build"
  },
  "keywords": [
    "web-apps",
    "showcase",
    "pwa",
    "admin-dashboard",
    "cms"
  ],
  "author": "WebApps Hub",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "serverless-http": "^3.2.0",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
